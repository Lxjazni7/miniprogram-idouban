@import "../../template/start.wxss";

.stars-container {
  width: 50%;
  justify-content: flex-start;
}


.reviews-item {
  display: flex;
  margin: 30rpx;
}

.avatar {
  display: flex;
  width: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.content {
  display: flex;
  width: 600rpx;
  flex-direction: column;
}

.content-name {
 display: flex;
 width: 100%;
}

.author-name {
  display: flex;
  margin-right: 30rpx;
  font-size: 30rpx;
}

.content-time {
  font-size: 20rpx;
  opacity: 0.6;
}

.content-review {
  font-size: 26rpx;
  opacity: 0.6;
}

.loading {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.loading image {
  width: 50rpx;
}